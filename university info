#include<stdio.h>
struct university
{
    int classes;
    char classes[100];
    int buses;
    int faculties;
    char faculties[100];
    int lab;
    cahr lab[100];
    int courses;
    char courses[100];
};
struct university_input()
{
    struct university a;
    printf("enter the number of classes\n");
    scanf("%d",&a.classes);
    printf("enter the name of classes \n");
    scanf("%s",a[100].classes);
    printf("enter the number of busses\n");
    scanf("%d",&a.buses);
    printf("enter the number of faculties\n");
    scanf("%d",&a.faculties);
    printf("enter the name of faculties\n");
    scanf("%s",a[100].faculties);
    printf("enetr the number of lab\n");
    scanf("%d",&a.lab);
    printf("enter the names of lab\n");
    scanf("%s",a[100].lab);
    printf("enter the number of courses\n");
    scanf("%d",&a.courses);
    printf("enter the names of courses\n");
    scanf("%s",a[100].courses);
}
void output(struct university a)
{
    printf("the number of classes are:\n %d",a.classes);
    printf("the name of classes are:\n %d",a[100].classes);
    printf("the number of buses are:\n %d",a.buses);
    printf("the number of faculties are:\n %d",a.faculties);
    printf("the number of lab are:\n %d",a.lab);
    printf("the name of lab are:\n %d",a[100].lab);
    printf("the number of courses are:\n %d",a.courses);
    printf("the name of courses are:\n %d",a[100].courses);
}
int main()
{
    struct university a;
    a=university_input();
    output(a);
}
